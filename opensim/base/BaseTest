#ifndef _BASE_BASETEST_
#define _BASE_BASETEST_

#include <cppunit/extensions/HelperMacros.h>

#include <base/base>
#include <base/array>


namespace base {


class BaseTest : public CppUnit::TestFixture 
{
  static const Int numOfTests = 1;

  CPPUNIT_TEST_SUITE( BaseTest );

  CPPUNIT_TEST( testarray );
  CPPUNIT_TEST( testTransform );

  CPPUNIT_TEST_SUITE_END();

protected:

  
public:
  BaseTest();

  int countTestCases () const { return numOfTests; }
  
  void setUp();
  void tearDown();
  
  void testarray();
  void testTransform();
};


} // base

#endif
