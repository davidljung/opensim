#ifndef _APPS_JOINTPOSITIONCONTROLWIDGET_
#define _APPS_JOINTPOSITIONCONTROLWIDGET_

#include <gtkmm.h>

#include <base/base>
#include <robot/robot>

#include <robot/control/kinematics/IKORController>
#include <robot/sim/BasicEnvironment>

#include <apps/ControlInterfaceWidget>



namespace apps {

// GUI Widget for ControlInterface of type JointPositionControl
class JointPositionControlWidget : public ControlInterfaceWidget
{

public:
  JointPositionControlWidget(GUIControlWindow& parentWindow);
  
  virtual base::String className() const { return String("JointPositionControlWidget"); }

  virtual void init(ref<robot::sim::BasicEnvironment> env, ref<robot::Robot> robot, Int index, ref<robot::ControlInterface> interface);

  virtual void iterate(const base::Time& simTime);

protected:
  base::Time lastSimTime;

  ref<robot::ControlInterface> posInterface;
  
  array<Gtk::Adjustment*> posAdjustments;
  array<Gtk::HScale*> posScales;
  
  // signal handlers
  void jointPositionScaleChanged(Int j);
  
};


} // app

#endif

