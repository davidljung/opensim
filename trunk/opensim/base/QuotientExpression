#ifndef _BASE_QUOTIENTEXPRESSION_
#define _BASE_QUOTIENTEXPRESSION_

#include <base/base>
#include <base/BinaryOpExpression>
#include <base/SumExpression>

namespace base {


//
// Sum operator - adds args
//

class QuotientExpression : public BinaryOpExpression 
{
public:
  QuotientExpression(ref<ExpressionNode> left, ref<ExpressionNode> right)
    : BinaryOpExpression(left, right) {}
  QuotientExpression(const QuotientExpression& e)
    : BinaryOpExpression(e) {}

  virtual Object& clone() const { return *NewObj QuotientExpression(*this); }
  virtual String className() const { return String("QuotientExpression"); }

  virtual NodeType type() const { return NodeType(BinaryOp|Quotient); } 

  virtual String toString() const 
    { return  String("(")+leftArg->toString()+ "/"+rightArg->toString()+")"; }

protected:
  QuotientExpression() {}

  virtual void cacheValue(const Vector& params) const
    { value = leftArg->evaluate(params) / rightArg->evaluate(params); valueCached=true; }

  virtual void cacheDerivative(Int withRespectToIndex) const
    {
      //... check implementation (cut/pastes from Product) !!! 
      Unimplemented;
      derivative = ref<ExpressionNode>( NewObj SumExpression( ref<ExpressionNode>(
        NewObj ProductExpression( leftArg, rightArg->differentiate(withRespectToIndex) )), ref<ExpressionNode>(
        NewObj ProductExpression( leftArg->differentiate(withRespectToIndex), rightArg ) ) ) ); 
      derivWithRespToIndex = withRespectToIndex;
      derivCached = true;
    }

  virtual void operationCounts(Int& addsub, Int& multdiv, Int& trig) const 
    { BinaryOpExpression::operationCounts(addsub,multdiv,trig); multdiv++; }

  friend class Serializable::SerializableDerivedInstantiator<QuotientExpression>;
  
};

} // base

#endif

