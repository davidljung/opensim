#ifndef _GFX_
#define _GFX_

#include <base/base>

#include <base/ref>
#include <base/consts>
#include <base/Math>
#include <base/Vector2>
#include <base/Vector3>
#include <base/Vector4>
#include <base/Point2>
#include <base/Point3>
#include <base/Point4>
#include <base/Quat4>
#include <base/Matrix3>
#include <base/Matrix4>

#include <osg/ref_ptr>


namespace gfx {

// Import some base types as 'globals'
using base::Byte;

using base::ref;
using base::narrow_ref;
using base::Math;
using base::Point2;
using base::Point3;
using base::Point4;
using base::Vector2;
using base::Vector3;
using base::Vector4;
using base::Quat4;
using base::Matrix3;
using base::Matrix4;

using osg::ref_ptr;

inline Real degToRad(Real deg) { return Math::degToRad(deg); }
inline Real radToDeg(Real rad) { return Math::radToDeg(rad); }
using base::equals;

}

#endif
