#ifndef _PHYSICS_POSITIONABLE_
#define _PHYSICS_POSITIONABLE_

#include <physics/physics>


namespace physics {

/// interface for things that can be positioned in 3D space
class Positionable
{
public:
  Positionable() {}
  Positionable(const Positionable& p) { *this = p; }

  virtual Positionable& operator=(const Positionable& p) { setPosition(p.getPosition()); return *this; }
  
  virtual void   setPosition(const Point3& pos) = 0;
  virtual Point3 getPosition() const = 0;
  
};
  

} // physics

#endif
